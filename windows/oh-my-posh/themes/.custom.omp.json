{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#ffffff",
          "properties": {
            "root_icon": "⚡"
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "lightYellow"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "lightWhite",
          "background": "blue",
          "properties" : {
            "home_icon": "~",
            "folder_icon": "..",
            "folder_separator_icon": "/",
            "style": "agnoster_short"
          }
        },

        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "lightWhite",
          "background": "magenta",
          "properties": {
            "local_working_icon": "",
            "local_staged_icon": "",
            "stash_count_icon": "↪",
            "status_separator_icon": " |",
            "tag_icon": "▶ ",
            "branch_icon": "  ",
            "branch_identical_icon": "=",
            "branch_gone_icon": "!=",
            "branch_ahead_icon": "⬆",
            "branch_behind_icon": "⬇",
            "display_stash_count": true,
            "display_upstream_icon": false
          }
        },

        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "lightWhite",
          "background": "red",
          "properties": {
            "display_version": false,
            "display_virtual_env": true,
            "display_mode": "environment"
          }
        }
      ]
    },
    {
    "type": "rprompt",
    "alignment": "right",
    "segments":[
      {
        "type": "exit",
        "style": "diamond",
        "trailing_diamond": "\uE0B0",
        "leading_diamond": "\uE0B2",
        "foreground": "#ffffff",
        "background": "red"
      }
    ]
    }
  ],
  "final_space": true
}
